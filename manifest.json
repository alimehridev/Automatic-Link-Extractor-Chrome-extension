{
  "manifest_version": 3,
  "name": "Automatic Link Extractor",
  "version": "1.0",
  "description": "A chrome extension which detect DOM changes and extract links from it",
  "permissions": ["storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "assets/images/icon-512.png",
      "48": "assets/images/icon-512.png",
      "128": "assets/images/icon-512.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/js/helpers.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["worker.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
